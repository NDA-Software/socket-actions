{
    "name": "socket-actions",
    "main": "./dist/cjs/index.cjs",
    "module": "./dist/esm/index.mjs",
    "type": "module",
    "version": "2.0.3",
    "description": "Websocket implementation to simplify communication and queueing of user actions.",
    "repository": "git@github.com:NDA-Software/socket-actions.git",
    "author": "HerrTuring <admin@nda.software>",
    "license": "MIT",
    "keywords": [
        "typescript",
        "websocket",
        "server",
        "client",
        "queue",
        "event"
    ],
    "scripts": {
        "start": "node ./dist/cjs/index.cjs",
        "build": "rollup -c",
        "watch": "rollup -c -w",
        "lint": "eslint src --ext .ts,.tsx",
        "lint-fix": "eslint src --ext .ts,.tsx --fix",
        "test": "jest --detectOpenHandles"
    },
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "require": "./dist/cjs/index.cjs",
            "import": "./dist/esm/index.mjs",
            "types": "./dist/types/index.d.ts"
        },
        "./client": {
            "require": "./dist/cjs/client.cjs",
            "import": "./dist/esm/client.mjs",
            "types": "./dist/types/client.d.ts"
        },
        "./server": {
            "require": "./dist/cjs/server/index.cjs",
            "import": "./dist/esm/server/index.mjs",
            "types": "./dist/types/server.d.ts"
        }
    },
    "typesVersions": {
        "*": {
            "*": [
                "./dist/types/index.d.ts"
            ],
            "client": [
                "./dist/types/client.d.ts"
            ],
            "server": [
                "./dist/types/server.d.ts"
            ]
        }
    },
    "devDependencies": {
        "@rollup/plugin-json": "^6.0.1",
        "@rollup/plugin-node-resolve": "^15.1.0",
        "@rollup/plugin-typescript": "^11.1.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.1.1",
        "@types/node": "^20.5.2",
        "@types/uuid": "^9.0.7",
        "@types/ws": "^8.5.9",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^38.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-promise": "^6.1.1",
        "jest": "^29.1.1",
        "rollup": "^3.29.5",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-dts": "^6.1.0",
        "rollup-plugin-indexer": "^3.0.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2"
    },
    "funding": "https://www.buymeacoffee.com/herrturing",
    "peerDependencies": {
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "ts-cornucopia": "^3.0.1",
        "uuid": "^9.0.1",
        "ws": "^8.14.2"
    }
}